<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SongList.Toolbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="popupTheme">@style/Theme.SongList.PopupOverlay.Menu</item>
    </style>

    <style name="Theme.SongList.PopupOverlay.Menu" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance" />

    <style name="TextAppearance.Regular">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Regular.SubTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Regular.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Regular.List">
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
    </style>

    <style name="TextAppearance.Regular.List.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="Slider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <item name="colorOnPrimary">?colorOnSecondary</item>
    </style>

</resources>